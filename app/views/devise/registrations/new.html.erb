<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow rounded">
  <h2 class="text-2xl font-bold mb-6 text-center">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Sign up", class: "w-full bg-orange-500 text-white py-2 px-4 rounded hover:bg-orange-600" %>
    </div>
  <% end %>

  <div class="text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>

