<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Left: Logo -->
    <div class="text-2xl font-bold text-orange-600">
      <%= link_to "AllShops", root_path, class: "hover:text-orange-500" %>
    </div>

    <!-- Right: Navigation Links -->
    <div class="flex items-center space-x-6">
      <%= link_to "Products", products_path, class: "text-sm font-medium text-gray-700 hover:text-orange-600" %>

      <% if user_signed_in? %>
        <span class="text-sm font-medium text-gray-700">
          Hi, <%= current_user.name.presence || current_user.email %>
        </span>

        <% if current_user.respond_to?(:user_type) && current_user.user_type.to_i == 2 %>
          <%= link_to "Seller Dashboard", seller_dashboard_path, class: "text-sm font-medium text-gray-700 hover:text-orange-600" %>
        <% end %>

        <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-sm font-medium text-red-600 hover:text-red-800" %>
      <% else %>
        <%= link_to "Log In", new_user_session_path, class: "text-sm font-medium text-gray-700 hover:text-orange-600" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "text-sm font-medium text-gray-700 hover:text-orange-600" %>
      <% end %>
    </div>
  </div>
</header>


